<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/login_background"
tools:context="com.movies.icuba.mymovieworld.drawer.LoginActivity">

    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/login_logo_img"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:padding="10dp"
        android:layout_height="120dp" />
    <EditText

        android:layout_below="@+id/login_logo_img"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="  Username"
        android:background="@drawable/edit_texy_box"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/login_username"
        android:hint="  Passwrord"
        android:background="@drawable/edit_texy_box"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/con_as_guest"
        android:layout_below="@id/login_password"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_btn"
        android:layout_below="@+id/con_as_guest"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:text="@string/login_button"
        android:layout_height="wrap_content" />


</RelativeLayout>
