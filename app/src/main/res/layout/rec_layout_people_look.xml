<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorPrimary">



    <ImageView
        android:id="@+id/people_img"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="250dp" />
    <RelativeLayout

        android:id="@+id/people_bio"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="250dp">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:id="@+id/people_name"
            android:gravity="start"
            android:text="Name"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/people_name"
            android:id="@+id/people_rating"
            android:drawablePadding="10dp"
            android:textColor="@color/colorAccent"
            android:drawableStart="@drawable/rate_empty_hdpi"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/rate_empty_hdpi" />


        <TextView
            android:layout_above="@id/people_bioTXT"

            android:text="Known for: "
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:id="@+id/people_bioTXT"
            android:gravity="start"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <ImageView

        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_people_det"
        android:padding="15dp"
        android:background="@android:drawable/ic_media_play"/>

</LinearLayout>