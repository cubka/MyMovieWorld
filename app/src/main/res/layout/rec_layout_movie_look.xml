<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/movies_rec_layout"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/movie_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/heart"
            android:background="@drawable/favourites_empty_hdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <TextView
        android:layout_margin="2dp"
        android:drawablePadding="2dp"
        android:textColor="@android:color/white"
        android:id="@+id/movie_nameTXT"
        android:gravity="end"
        android:text="movie name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/star"
            android:background="@drawable/rate_empty_hdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="2dp"
        android:drawablePadding="2dp"

        android:textColor="@android:color/white"
        android:id="@+id/movie_ratingTXT"
        android:layout_gravity="right"
        android:text="movie rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv"
            android:background="@drawable/watchlist_add_hdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <TextView
        android:layout_margin="2dp"
        android:drawablePadding="2dp"


        android:textColor="@android:color/white"
        android:text="add to watchlist"
        android:id="@+id/movie_watchlistTXT"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    </LinearLayout>




</LinearLayout>